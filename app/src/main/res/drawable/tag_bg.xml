<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/> <!-- orange -->
            <corners android:radius="16dp"/>
            <padding
                android:left="12dp"
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp"/>
        </shape>
    </item>

    <!-- Unselected state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#eeebe8"/> <!-- your original color -->
            <corners android:radius="16dp"/>
            <padding
                android:left="12dp"
                android:top="6dp"
                android:right="12dp"
                android:bottom="6dp"/>
        </shape>
    </item>

</selector>
