<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <!-- Step number circle -->
    <TextView
        android:id="@+id/tvStepNumber"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/bg_numbered_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Instruction EditText -->
    <EditText
        android:id="@+id/etInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:maxLines="4"
        android:gravity="top|start"
        android:hint="Describe this step..."
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/tvStepNumber"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_trash"
        android:background="@drawable/bg_delete_button"
        android:padding="12dp"
        android:contentDescription="Delete step"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
